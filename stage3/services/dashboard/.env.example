# Environment (development, production, test)
NODE_ENV=development

# Server port
PORT=3006

# Log level (error, warn, info, http, debug)
LOG_LEVEL=debug

# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/kiryana-dashboard

# Microservice URLs
AUTH_SERVICE_URL=http://localhost:3001/api
PRODUCT_SERVICE_URL=http://localhost:3002/api
INVENTORY_SERVICE_URL=http://localhost:3003/api
STORE_SERVICE_URL=http://localhost:3004/api
REPORTING_SERVICE_URL=http://localhost:3005/api

# Dashboard settings
WIDGET_CACHE_TIME_MINUTES=5

# CORS settings
CORS_ORIGIN=*