# Kiryana Inventory System - Stage 3 Environment Configuration

# API Gateway Configuration
API_GATEWAY_PORT=3000
NODE_ENV=development

# Service URLs
AUTH_SERVICE_URL=http://localhost:3001
PRODUCT_SERVICE_URL=http://localhost:3002
INVENTORY_SERVICE_URL=http://localhost:3003
STORE_SERVICE_URL=http://localhost:3004
REPORTING_SERVICE_URL=http://localhost:3005

# Service Ports
AUTH_SERVICE_PORT=3001
PRODUCT_SERVICE_PORT=3002
INVENTORY_SERVICE_PORT=3003
STORE_SERVICE_PORT=3004
REPORTING_SERVICE_PORT=3005

# Database Configuration
DATABASE_URL=${DATABASE_URL}

# Authentication Configuration
JWT_SECRET=kiryana_inventory_jwt_secret_key
JWT_EXPIRES_IN=1d

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in ms
RATE_LIMIT_MAX=100  # 100 requests per window

# Reporting Service
REPORT_CACHE_EXPIRY=3600  # Cache expiry in seconds (1 hour)
